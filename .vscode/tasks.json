{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build agenda",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o",
                "agenda",
                "agenda.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:/MinGW/bin/gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            }
        }
    ]
}